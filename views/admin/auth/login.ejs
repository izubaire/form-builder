<%- include('../components/header.ejs') %>
  </head>

  <body>
    <%- include('../components/topnav.ejs') %>
      <%- include('../components/sidenav.ejs') %>
        <section class="d-flex justify-content-end">
          <div class="section px-2 px-lg-4">
            <div class="create-client-section">
              <div
                class="d-flex justify-content-lg-start justify-content-center px-md-4 px-2 py-2 my-3 bg-white shadow-sm">
                <h4 style="color: var(--grey);">Please Login!</h4>
              </div>
              <div class="create-client pb-3">
                <form action="/admin/login" method="post" class="container"
                  style="max-width: clamp(450px, 90%, 320px) !important;">
                  <% if (errorMessage) { %>
                    <div class="bg-danger p-2 text-center text-white mb-3">
                      <%= errorMessage %>
                    </div>
                    <% } %>

                      <!-- Email input -->
                      <div class="form-outline mb-4">
                        <label class="form-label" for="form2Example1">Email address</label>
                        <input name="email" type="email" id="form2Example1"
                          class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid form-control' : 'form-control' %>"
                          value="<%= oldInput.email %>" />
                      </div>
                      <!-- Password input -->
                      <div class="form-outline mb-4">
                        <label class="form-label" for="form2Example2">Password</label>
                        <input name="password" type="password" id="form2Example2"
                          class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid form-control' : 'form-control' %>"
                          value="<%= oldInput.password %>" />
                      </div>

                      <!-- 2 column grid layout for inline styling -->
                      <div class="row mb-4">
                        <div class="col d-flex justify-content-center">

                          <div class="col text-right">
                            <!-- Simple link -->
                            <a href="/admin/reset">Forgot password?</a>
                          </div>
                        </div>
                      </div>
                      <!-- Submit button -->
                      <button type="submit" class="btn btn-red btn-block mb-4">Sign in</button>

                      <!-- Register buttons -->
                      <div class="text-center">
                        <p>Not a member? <a href="/admin/signup">Register</a></p>
                        <p>or sign up with:</p>
                        <button type="button" class="btn btn-link btn-floating mx-1">
                          <i class="fab fa-facebook-f"></i>
                        </button>

                        <button type="button" class="btn btn-link btn-floating mx-1">
                          <i class="fab fa-google"></i>
                        </button>

                        <button type="button" class="btn btn-link btn-floating mx-1">
                          <i class="fab fa-twitter"></i>
                        </button>

                        <button type="button" class="btn btn-link btn-floating mx-1">
                          <i class="fab fa-github"></i>
                        </button>
                      </div>
                </form>
              </div>
            </div>
          </div>
        </section>
        <%- include('../components/footer.ejs') %>